<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_sign"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원가입"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textColor="#ffffff"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sign_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:weightSum="1"
                android:layout_below="@+id/ll_sign">

                <EditText
                    android:id="@+id/et_signup_id"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:hint="     아이디"
                    android:ems="20" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sign_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginTop="70dp"
                android:layout_below="@+id/ll_sign_id">

                <EditText
                    android:id="@+id/et_signup_pwd"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:inputType="textPassword"
                    android:hint="     비밀번호"
                    android:ems="15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sign_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginTop="70dp"
                android:layout_below="@+id/ll_sign_pwd">

                <EditText
                    android:id="@+id/et_signup_email"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:hint="     이메일"
                    android:ems="30" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sign_bottom"
                android:layout_marginTop="85dp"
                android:layout_below="@id/ll_sign_email"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_sign_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:background="@drawable/oval_rect_button"
                    android:text="넘어가기"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>

                <Button
                    android:id="@+id/btn_sign_confirm"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:background="@drawable/oval_rect_button"
                    android:text="가입하기"/>
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>


</LinearLayout>